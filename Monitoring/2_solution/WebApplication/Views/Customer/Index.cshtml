@using WebApplication.DataModels;
@using WebApplication.Models;
@model ViewAllCustomersViewModel

<div class="text-center">
    <h1 class="display-4">All customers</h1>


    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model.Customers)
            {
            <tr>
                <th scope="row">@Html.ActionLink(customer.CustomerID.ToString(), "Edit", "Customer", new { id = customer.CustomerID })</th>
                <td>@Html.ActionLink(customer.FirstName, "Edit", "Customer", new { id = customer.CustomerID })</td>
                <td>@Html.ActionLink(customer.LastName, "Edit", "Customer", new { id = customer.CustomerID })</td>
            </tr>
            }
        </tbody>
    </table>
</div>
